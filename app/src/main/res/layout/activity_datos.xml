<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DatosActivity">

    <TextView
        android:id="@+id/tv_datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10"
        android:textColor="@color/teal_700"
        android:textSize="35sp"
        android:textAlignment="center"
        android:text="@string/tv_datos"/>

    <TextView
        android:id="@+id/tv_Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_datos"
        app:layout_constraintVertical_bias="0.15"
        android:textSize="25sp"
        android:hint="@string/tv_Nombre"/>

    <TextView
        android:id="@+id/tv_Codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Nombre"
        app:layout_constraintVertical_bias="0.1"
        android:textSize="25sp"
        android:hint="@string/tv_Codigo" />

</androidx.constraintlayout.widget.ConstraintLayout>